@model Hotel

<div class="container my-5">
    <form asp-controller="Dashboard" asp-action="Update" method="post">
        <input type="hidden" asp-for="@Model.Id" />

        <div class="row">
            <div class="col-md-6 mb-4">

                <div class="form-outline">
                    <label class="form-label" for="Name">اسم الفندق</label>
                    <input type="text" id="Name" name="Name" class="form-control form-control-lg" asp-for="@Model.Name" />
                </div>

            </div>
            <div class="col-md-6 mb-4">

                <div class="form-outline">
                    <label class="form-label" for="Images">صورة الفندق</label>
                    <input type="text" id="Images" name="Images" class="form-control form-control-lg" asp-for="@Model.Images" />
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4 d-flex align-items-center">

                <div class="form-outline datepicker w-100">
                    <label class="form-label" for="City">المدينة</label>
                    <input type="text" id="City" name="City" class="form-control form-control-lg" asp-for="@Model.City" />
                </div>

            </div>
            <div class="col-md-6 mb-4">

                <label class="form-label" for="Address">العنوان</label>
                <input type="text" id="Address" name="Address" class="form-control form-control-lg" asp-for="@Model.Address" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4 pb-2">

                <div class="form-outline">
                    <label class="form-label" for="Phone">رقم الهاتف</label>
                    <input type="text" id="Phone" name="Phone" class="form-control form-control-lg" asp-for="@Model.Phone" />
                </div>

            </div>
            <div class="col-md-6 mb-4 pb-2">

                <div class="form-outline">
                    <label class="form-label" for="Email">البريد الإلكتروني</label>
                    <input type="text" id="Email" name="Email" class="form-control form-control-lg" asp-for="@Model.Email" />
                </div>

            </div>
        </div>



        <div class=" mt-4 pt-2 text-center">
            <input class=" btn btn-primary btn-lg" type="submit" value="حفظ" />
        </div>

    </form>
</div>