@model RoomDetails
@{

    ViewData["Title"] = "Home Page";
}
<form asp-action="UpdateRoomDetails" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="row">
        <div class="col">
            <label for="Name" class="p-2">اختر الفندق</label>
            <select class="form-control form-control-sm" name="IdHotel" asp-for="@Model.IdHotel">
                <option value="0"></option>
                @foreach (var item in ViewBag.hotel)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <label for="Name" class="p-2">اختر الغرفة</label>
            <select class="form-control form-control-sm " name="IdRoom" asp-for="@Model.IdRooms">
                <option value="0"></option>
                @foreach (var item in ViewBag.rooms)
                {
                    <option value="@item.Id">@item.RoomNo</option>
                }

            </select>



        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <label for="Address" class="p-2"> الصورة </label>
            <input type="text" id="Image1" name="Image1" class="form-control form-control-sm" asp-for="@Model.Image1"/>


        </div>
        <div class="col-sm-6">
            <label for="Address" class="p-2"> الصورة </label>
            <input type="text" id="Image2" name="Image2" class="form-control form-control-sm" asp-for="@Model.Image2"/>


        </div>
        <div class="col-sm-6">
            <label for="Address" class="p-2"> الصورة </label>
            <input type="text" id="Image3" name="Image3" class="form-control form-control-sm" asp-for="@Model.Image3"/>


        </div>
        <div class="col-sm-6">
            <label for="Address" class="p-2"> الطعام</label>
            <input type="text" id="Food" name="Food" class="form-control form-control-sm" asp-for="@Model.Food"/>


        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <label for="Email" class="p-2">المميزات </label>
            <input type="text" id="Futures" name="Futures" class="form-control form-control-sm" asp-for="@Model.Futures"/>


        </div>


    </div>


    <div class="row mt-3">
        <div class="col text-center">

            <button class="btn btn-success" type="submit">حفظ</button>


        </div>

    </div>
</form>