@model Rooms
@{

    ViewData["Title"] = "Home Page";
}
<div class="container my-5">
    <form asp-controller="Dashboard" asp-action="UpdateRoom" method="post">

        <input type="hidden" asp-for="@Model.Id" />

        <div class="row">
            <div class="col">
                <label for="Name" class="p-2">اختر الفندق</label>
                <select class="form-control form-control-sm" name="IdHotel" asp-for="@Model.IdHotel">
                    <option value="0"></option>
                    @foreach (var item in ViewBag.hotel)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>


            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label for="Address" class="p-2"> نوع الغرفة </label>
                <input type="text" id="Type" name="Type" class="form-control form-control-sm" asp-for="@Model.Type" />


            </div>
            <div class="col-sm-6">
                <label for="Address" class="p-2">  سعر الغرفة</label>
                <input type="text" id="Price" name="Price" class="form-control form-control-sm" asp-for="@Model.Price" />


            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <label for="Email" class="p-2">الصورة </label>
                <input type="text" id="Images" name="Images" class="form-control form-control-sm" asp-for="@Model.Images" />


            </div>
            <div class="col-sm-6">
                <label for="Email" class="p-2">رقم الغرفة </label>
                <input type="text" id="RoomNo" name="RoomNo" class="form-control form-control-sm" asp-for="@Model.RoomNo" />


            </div>

        </div>


        <div class="row mt-3">
            <div class="col text-center">

                <button class="btn btn-primary" type="submit">حفظ</button>


            </div>

        </div>
    </form>
</div>